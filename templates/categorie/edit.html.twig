  {% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="d-flex flex-column flex-column-fluid">
    <div id="kt_content_container" class="container-xxl">
        <div class="card mb-5 mb-xl-8">
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bold fs-3 mb-1">Edit category</span>
                    <span class="text-muted mt-1 fw-semibold fs-7">Update category details</span>
                </h3>
            </div>
            <div class="card-body py-3">
                {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="row mb-6">
                    <label class="col-lg-2 col-form-label required fw-bold fs-6">Name</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-solid'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="row mb-6">
                    <label class="col-lg-2 col-form-label fw-bold fs-6">Icon</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.icone, {'attr': {'class': 'form-control form-control-solid'}}) }}
                        {{ form_errors(form.icone) }}
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <a href="{{ path('app_categorie_index') }}" class="btn btn-light me-3">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div> 


 {% endblock %}