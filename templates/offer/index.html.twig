{% extends 'base.html.twig' %}

{% block title %}Product Carousel list{% endblock %}

{% block page_css %}
<style>
    [data-bs-theme=light] body:not(.app-blank) {
        background-image: url("{{ asset('assets/media/patterns/header-bg1.jpg') }}") !important;
    }
</style>
{% endblock %}

{% block body %}
<body id="kt_body" class="header-fixed header-tablet-and-mobile-fixed toolbar-enabled">
    <div class="d-flex flex-column flex-root">
        <div class="page d-flex flex-row flex-column-fluid">
            <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
                <div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-xl">
                    <div class="content flex-row-fluid" id="kt_content">
                        <div class="row gy-5 g-xl-8"> 
                            <div class="card card-xl-stretch mb-5 mb-xl-8">
                                <div class="card-header border-0 pt-5">
                                    <h3 class="card-title align-items-start flex-column">
                                        <span class="card-label fw-bold fs-3 mb-1">Product Carousel list</span>
                                        <span class="text-muted mt-1 fw-semibold fs-7">All Products Carousel</span>
                                    </h3>
                                    <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top"
                                        data-bs-trigger="hover" title="Click to add an Product Carousel">
                                        <a class="btn btn-sm btn-light btn-active-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_offer">
                                            <i class="ki-duotone ki-plus fs-2"></i>New Product Carousel
                                        </a> 
                                    </div>
                                </div>
                                <div class="card-body py-3">
                                    <div class="table-responsive">
                                        <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                            <thead>
                                            <tr class="fw-bold text-muted">
                                                <th class="min-w-50px"></th>
                                                <th class="min-w-150px">Image</th>
                                                <th class="min-w-200px">Name</th>
                                                <th class="min-w-100px text-end">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for offer in offers %}
                                                <tr>
                                                    <td>{{ offer.id }}</td>
                                                    <td>
                                                        {% if offer.image %}
                                                       <div class="symbol me-5" style="width: 160px; height: 90px; overflow: hidden; border-radius: 8px;">
                                                            <img src="{{ asset(offer.image) }}" 
                                                                style="width: 100%; height: 100%; object-fit: cover;" 
                                                                alt="Offer Image">
                                                        </div>
                                                        {% else %}
                                                            <span class="symbol-label bg-light text-muted fw-bold">
                                                                {{ offer.name|slice(0, 2)|upper }}
                                                            </span>
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ offer.name }}</td>
                                                    <td class="text-end">
                                                        	<div class="d-flex justify-content-end flex-shrink-0">
																	<a href=""
																	class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
																		<i class="ki-duotone ki-switch fs-2"><span class="path1"></span><span class="path2"></span></i>
																	</a>
																	 <a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#kt_modal_edit_offer_{{ offer.id }}">
                                                                        <i class="ki-duotone ki-pencil text-primary fs-2">
                                                                        <span class="path1"></span><span class="path2"></span>
                                                                        </i>           
                                                                     </a>
                                                                    
                                                                    <a href="{{ path('app_offer_delete', {id: offer.id}) }}"
                                                                            class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm"
                                                                            data-bs-toggle="tooltip" title="Delete"
                                                                            onclick="return confirm('Are you sure you want to delete this Product Carousel?')">
                                                                        <i class="ki-duotone ki-trash fs-2 text-danger">
                                                                            <span class="path1"></span><span class="path2"></span>
                                                                            <span class="path3"></span><span class="path4"></span>
                                                                            <span class="path5"></span>
                                                                        </i>
                                                                    </a>

																</div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="4" class="text-center text-muted">No Product Carousel found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div> 
            </div>
        </div>
    </div>
<!-- Add Offer Modal -->
<div class="modal fade" id="kt_modal_add_offer" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header" id="kt_modal_add_offer_header">
                <h2 class="fw-bold">Add Product Carousel</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>

            {{ form_start(form, {
                'action': path('app_offer_new'),
                'attr': {
                    'id': 'kt_modal_add_offer_form',
                    'class': 'form',
                    'enctype': 'multipart/form-data'
                }
            }) }}

            <div class="modal-body px-5 my-7">
                <div class="d-flex flex-column scroll-y px-5 px-lg-10"
                     data-kt-scroll="true"
                     data-kt-scroll-max-height="auto"
                     data-kt-scroll-dependencies="#kt_modal_add_offer_header"
                     data-kt-scroll-wrappers="#kt_modal_add_offer_scroll"
                     data-kt-scroll-offset="300px">

                    <div class="fv-row mb-7">
                        <label class="required fw-semibold fs-6 mb-2">Name</label>
                        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-solid'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="fv-row mb-7">
                        <label class="d-block fw-semibold fs-6 mb-5">Product Carousel Image</label>

                        <style>
                            .image-input-placeholder {
                                background-image: url("{{ asset('assets/media/svg/files/blank-image.svg') }}");
                            }
                            [data-bs-theme="dark"] .image-input-placeholder {
                                background-image: url("{{ asset('assets/media/svg/files/blank-image-dark.svg') }}");
                            }
                        </style>

                        <div class="image-input image-input-outline image-input-placeholder image-input-empty"
                             data-kt-image-input="true">
                            <div class="image-input-wrapper w-160px h-90px" style="background-image: none;"></div>

                            <label for="offer_imageFile"
                                   class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow"
                                   data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Change image">
                                <i class="ki-duotone ki-pencil fs-7">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                {{ form_widget(form.imageFile, {
                                    'label': false,
                                    'attr': {
                                        'id': 'offer_imageFile',
                                        'class': 'd-none',
                                        'accept': '.png,.jpg,.jpeg'
                                    }
                                }) }}
                            </label>

                            <input type="hidden" name="image_remove" value="0">
                        </div>

                        <div class="form-text">Allowed file types: png, jpg, jpeg.</div>
                        {{ form_errors(form.imageFile) }}
                    </div>
                </div>
            </div>

            <div class="modal-footer text-center">
                <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">Discard</button>
                <button type="submit" class="btn btn-primary">
                    <span class="indicator-label">Submit</span>
                    <span class="indicator-progress" style="display:none;">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Edit Offer Modals -->
{% for offer in offers %}
<div class="modal fade" id="kt_modal_edit_offer_{{ offer.id }}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header" id="kt_modal_edit_offer_header_{{ offer.id }}">
                <h2 class="fw-bold">Edit Product Carousel</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>

            {{ form_start(editForms[offer.id], {
                'action': path('app_offer_edit', {'id': offer.id}),
                'attr': {
                    'id': 'kt_modal_edit_offer_form_' ~ offer.id,
                    'class': 'form',
                    'enctype': 'multipart/form-data'
                }
            }) }}

            <div class="modal-body px-5 my-7">
                <div class="d-flex flex-column scroll-y px-5 px-lg-10"
                     data-kt-scroll="true"
                     data-kt-scroll-max-height="auto"
                     data-kt-scroll-dependencies="#kt_modal_edit_offer_header_{{ offer.id }}"
                     data-kt-scroll-wrappers="#kt_modal_edit_offer_scroll_{{ offer.id }}"
                     data-kt-scroll-offset="300px">

                    <div class="fv-row mb-7">
                        <label class="required fw-semibold fs-6 mb-2">Name</label>
                        {{ form_widget(editForms[offer.id].name, {'attr': {'class': 'form-control form-control-solid'}}) }}
                        {{ form_errors(editForms[offer.id].name) }}
                    </div>

                    <div class="fv-row mb-7">
                        <label class="d-block fw-semibold fs-6 mb-5">Offer Image</label>

                        <div class="image-input image-input-outline {% if offer.image %}image-input-filled{% else %}image-input-placeholder{% endif %}"
                             data-kt-image-input="true">
                            <div class="image-input-wrapper w-160px h-90px"
                                 {% if offer.image %}
                                     style="background-image: url('{{ asset(offer.image) }}')"
                                 {% endif %}>
                            </div>

                            <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow"
                                   data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Change image">
                                <i class="ki-duotone ki-pencil fs-7">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                {{ form_widget(editForms[offer.id].imageFile, {
                                    'label': false,
                                    'attr': {
                                        'class': 'd-none',
                                        'accept': '.png,.jpg,.jpeg'
                                    }
                                }) }}
                            </label>

                            <input type="hidden" name="image_remove" value="0">
                        </div>

                        <div class="form-text">1408*768 Allowed file types: png, jpg, jpeg.</div>
                        {{ form_errors(editForms[offer.id].imageFile) }}
                    </div>
                </div>
            </div>

            <div class="modal-footer text-center">
                <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">Discard</button>
                <button type="submit" class="btn btn-primary">
                    <span class="indicator-label">Update</span>
                    <span class="indicator-progress" style="display:none;">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
            {{ form_end(editForms[offer.id]) }}
        </div>
    </div>
</div>
{% endfor %}


</body>
{% endblock %}
